<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NanoProxy - User Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#667eea',
                        secondary: '#764ba2',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gradient-to-br from-primary to-secondary min-h-screen p-5">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <h1 class="text-white text-center mb-8 text-4xl font-bold drop-shadow-lg">
            üîê NanoProxy User Management
        </h1>

        <!-- Stats Card -->
        <div class="bg-gradient-to-br from-primary to-secondary rounded-xl p-6 shadow-xl mb-6">
            <div class="text-center">
                <h3 class="text-white text-sm font-semibold opacity-90 mb-2">Total Users</h3>
                <div class="text-white text-5xl font-bold" id="totalUsers" hx-get="/admin/api/users" hx-trigger="load, userAdded from:body, userDeleted from:body" hx-swap="none" hx-on::after-request="this.textContent = JSON.parse(event.detail.xhr.response).count">
                    {{ .UserCount }}
                </div>
            </div>
        </div>

        <!-- Add User Card -->
        <div class="bg-white rounded-xl p-8 shadow-xl mb-6">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">Add New User</h2>
            
            <!-- Message Area -->
            <div id="message" class="hidden mb-4"></div>

            <form hx-post="/admin/api/users" 
                  hx-on::after-request="handleResponse(event)"
                  class="space-y-4">
                <div>
                    <label for="username" class="block text-sm font-semibold text-gray-700 mb-2">Username</label>
                    <input type="text" 
                           id="username" 
                           name="username" 
                           required 
                           class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-primary transition-colors">
                </div>
                <div>
                    <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
                    <input type="password" 
                           id="password" 
                           name="password" 
                           required 
                           class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-primary transition-colors">
                </div>
                <button type="submit" 
                        class="bg-gradient-to-r from-primary to-secondary text-white px-6 py-3 rounded-lg font-semibold hover:shadow-lg transform hover:-translate-y-0.5 transition-all">
                    Add User
                </button>
            </form>
        </div>

        <!-- Users List Card -->
        <div class="bg-white rounded-xl p-8 shadow-xl">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">Users</h2>
            <div id="usersTable" 
                 hx-get="/admin/users-table" 
                 hx-trigger="load, userAdded from:body, userDeleted from:body"
                 hx-swap="innerHTML">
                {{ template "users-table" . }}
            </div>
        </div>
    </div>

    <script>
        function handleResponse(event) {
            const messageEl = document.getElementById('message');
            const form = event.target;
            
            if (event.detail.successful) {
                messageEl.className = 'bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4';
                messageEl.textContent = 'User created successfully!';
                messageEl.classList.remove('hidden');
                form.reset();
                
                // Trigger refresh of user list and count
                htmx.trigger(document.body, 'userAdded');
                
                setTimeout(() => {
                    messageEl.classList.add('hidden');
                }, 5000);
            } else {
                messageEl.className = 'bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4';
                messageEl.textContent = 'Failed to create user: ' + event.detail.xhr.responseText;
                messageEl.classList.remove('hidden');
            }
        }

        function changePassword(username) {
            const newPassword = prompt('Enter new password for ' + username + ':');
            if (!newPassword) return;

            fetch('/admin/api/users/' + encodeURIComponent(username), {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ password: newPassword }),
            })
            .then(response => {
                if (response.ok) {
                    showMessage('Password updated successfully!', 'success');
                } else {
                    return response.text().then(text => {
                        showMessage('Failed to update password: ' + text, 'error');
                    });
                }
            })
            .catch(error => {
                showMessage('Failed to update password', 'error');
            });
        }

        function showMessage(message, type) {
            const messageEl = document.getElementById('message');
            if (type === 'success') {
                messageEl.className = 'bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4';
            } else {
                messageEl.className = 'bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4';
            }
            messageEl.textContent = message;
            messageEl.classList.remove('hidden');
            
            setTimeout(() => {
                messageEl.classList.add('hidden');
            }, 5000);
        }
    </script>
</body>
</html>
